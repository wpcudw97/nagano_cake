<div class='container'>
  <h3>会員情報編集</h3>

  <div class='row'>
    <div class="col">

      <%= form_with model: @customer, url: customers_information_path do |f| %>

        <div class="form-group">
          <%= f.label "氏名", class: "col-2" %>
          <%= f.text_field :last_name %>　　　<%= f.text_field :first_fname %>
        </div>

        <div class="form-group">
          <%= f.label "フリガナ", class: "col-2" %>
          <%= f.text_field :last_name_kana %>　　　<%= f.text_field :first_fname_kana %>
        </div>

        <div class="form-group">
          <%= f.label "郵便番号", class: "col-2" %>
          <%= f.text_field :postal_code %>
        </div>

        <div class="form-group">
          <%= f.label "住所", class: "col-2" %>
          <%= f.text_field :address, size: 60 %>
        </div>

        <div class="form-group">
          <%= f.label "電話番号", class: "col-2" %>
          <%= f.text_field :telephone_number %>
        </div>

        <div class="form-group">
          <%= f.label "メールアドレス", class: "col-2" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </div>

        <div class="form-group d-flex justify-content-around">
          <%= link_to '編集内容を保存する', customer_path, class: "btn btn-success" %>
          <%= link_to '退会する', unsubscribe_customer_path,  class: "btn btn-danger" %>
        </div>

      <% end %>

    </div>
  </div>
</div>
