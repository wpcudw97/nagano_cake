<div class='container'>
  <h3>配送先編集</h3>
  <div class='row'>
    <div class="col">
      <%= form_with model: @address, url: address_path do |f| %>
        <div class="form-group">
          <%= f.label "郵便番号", class: "col-2" %>
          <%= f.text_field :postal_code %>
        </div>

        <div class="form-group">
          <%= f.label "住所", class: "col-2" %>
          <%= f.text_field :address, size: 60 %>
        </div>

        <div class="form-group">
          <%= f.label "氏名", class: "col-2" %>
          <%= f.text_field :name %>
          <%= f.submit '変更内容を保存', class: "btn btn-success" %>
        </div>

      <% end %>
    </div>
  </div>
</div>