<div class='container'>
  <h3>配送先登録/一覧</h3>
  <div class='row'>
    <div class="col">
      <%= form_with model: @address, url: addresses_path do |f| %>
        <div class="form-group">
          <%= f.label "郵便番号", class: "col-2" %>
          <%= f.text_field :postal_code, placeholder: "0000000" %>
        </div>

        <div class="form-group">
          <%= f.label "住所", class: "col-2" %>
          <%= f.text_field :address, placeholder: "東京都渋谷区代々木神園町0-0", size: 60 %>
        </div>

        <div class="form-group">
          <%= f.label "氏名", class: "col-2" %>
          <%= f.text_field :name, placeholder: "令和道子" %>
          <%= f.submit '新規登録', class: "btn btn-success" %>
        </div>

      <% end %>

      <table class="table table table-bordered table-secondary">
        <thead>
          <tr>
            <th class="col-2">郵便番号</th>
            <th class="col-5">住所</th>
            <th class="col-2">宛名</th>
            <th class="col-3"></th>
          </tr>

          <% @addresses.each do |address| %>
            <tr>
              <td><%= address.postal_code %></td>
              <td><%= address.address %></td>
              <td><%= address.name %></td>
              <td>
                <%= link_to "編集する", edit_address_path(address), class: "btn btn-sm btn btn-success" %>
                <%= link_to "削除する", address_path(address), method: :delete, "data-confirm" => "本当に消しますか?", class: "btn btn-sm btn-danger" %>
              </td>
            </tr>
          <% end %>
        </thead>
      </table>
    </div>
  </div>
</div>