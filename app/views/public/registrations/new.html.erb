<div class='container'>
  <h3>新規会員登録</h3>
  <div class='row'>
    <div class="col">

      <%= form_with model: @customer, url: customer_registration_path do |f| %>
        <div class="form-group">
          <%= f.label :last_name, "名前", class: "col-2" %>
          (姓)<%= f.text_field :last_name, placeholder: "令和" %>(名)<%= f.text_field :first_name, placeholder: "道子" %>
        </div>

        <div class="form-group">
          <%= f.label :last_name, "フリガナ", class: "col-2" %>
          (セイ)<%= f.text_field :last_name_kana, placeholder: "レイワ" %>(メイ)<%= f.text_field :first_name_kana, placeholder: "ミチコ" %>
        </div>

        <div class="form-group">
          <%= f.label :email, "メールアドレス", class: "col-2" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "sample@example.com" %>
        </div>

        <div class="form-group">
          <%= f.label :postal_code, "郵便番号(ハイフンなし)", class: "col-3" %>
          <%= f.text_field :postal_code, placeholder: "0000000" %>
        </div>

        <div class="form-group">
          <%= f.label :address, "住所", class: "col-2" %>
          <%= f.text_field :address, placeholder: "東京都渋谷区代々木神園町0-0", size: 40  %>
        </div>

        <div class="form-group">
          <%= f.label :telephone_number, "電話番号(ハイフンなし)", class: "col-3" %>
          <%= f.text_field :telephone_number, placeholder: "0000000000" %>
        </div>

        <div class="form-group">
          <%= f.label :encrypted_password, "パスワード(6文字以上)", class: "col-3" %>
          <%= f.password_field :encrypted_password, autocomplete: "current-password" %>
        </div>

        <div class="form-group">
          <%= f.label :encrypted_password, "パスワード(確認用)", class: "col-3" %>
          <%= f.password_field :encrypted_password, autocomplete: "current-password" %>
        </div>

        <div class="form-group text-center">
          <%= link_to '新規登録', customer_path, class: "btn btn-success d-grid gap-2 col-3 mx-auto" %>
        </div>

      <p>既に登録済みの方</p>
      <p><%= link_to "こちら", new_customer_session_path %>　からログインしてください。</p>

      <% end %>


    </div>
  </div>
</div>
