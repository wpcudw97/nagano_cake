<div class='container'>
  <h3>新規会員登録</h3>
  <div class='row'>
    <div class="col">

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <div class="form-group">
          <%= f.label :last_name, "名前", class: "col-3" %>
          (姓)　<%= f.text_field :last_name, placeholder: "令和" %>　(名)<%= f.text_field :first_name, placeholder: "道子" %>
        </div>

        <div class="form-group">
          <%= f.label :last_name, "フリガナ", class: "col-3" %>
          (セイ)<%= f.text_field :last_name_kana, placeholder: "レイワ" %>(メイ)<%= f.text_field :first_name_kana, placeholder: "ミチコ" %>
        </div>

        <div class="form-group">
          <%= f.label :email, "メールアドレス", class: "col-3" %>
          　　　<%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "sample@example.com" %>
        </div>

        <div class="form-group">
          <%= f.label :postal_code, "郵便番号(ハイフンなし)", class: "col-3" %>
          　　　<%= f.text_field :postal_code, placeholder: "0000000" %>
        </div>

        <div class="form-group">
          <%= f.label :address, "住所", class: "col-3" %>
          　　　<%= f.text_field :address, placeholder: "東京都渋谷区代々木神園町0-0", size: 45 %>
        </div>

        <div class="form-group">
          <%= f.label :telephone_number, "電話番号(ハイフンなし)", class: "col-3" %>
        　　　<%= f.text_field :telephone_number, placeholder: "0000000000" %>
        </div>

        <div class="form-group">
          <%= f.label :password, "パスワード(6文字以上)", class: "col-3" %>
          　　　<%= f.password_field :password, autocomplete: "current-password" %>
        </div>

        <div class="form-group">
          <%= f.label :password, "パスワード(確認用)", class: "col-3" %>
          　　　<%= f.password_field :password_confirmation, autocomplete: "current-password" %>
        </div>

        <div class="form-group text-center">
          <%= f.submit "Sign up" %>
        </div>

      <p>既に登録済みの方</p>
      <p><%= link_to "こちら", new_customer_session_path %>　からログインしてください。</p>

      <% end %>


    </div>
  </div>
</div>