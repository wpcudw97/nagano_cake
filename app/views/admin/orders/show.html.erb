<div class='container'>
  <h3>注文履歴詳細</h3>

  <div class='row'>
    <div class="col">
      <%= form_with model: @order, url: admin_order_path(@order) do |f| %>
        <div class="form-group">
          <%= f.label :name, "購入者", class: "col-sm-4 col-form-label" %>
          <%= @order.last_name+@order.first_name %>
        </div>

        <div class="form-group">
          <%= f.label :created_at, "注文日", class: "col-sm-4 col-form-label" %>
          <%= @order.created_at.strftime('%Y/%m/%d') %>
        </div>

        <div class="form-group">
          <%= f.label :postal_code, "配送先", class: "col-sm-4 col-form-label" %>
          〒<%= @order.postal_code.to_s.insert(3, "-") %>　<%= @order.address %>
        </div>

        <div class="form-group">
          <%= f.label :payment_method, "支払方法", class: "col-sm-4 col-form-label" %>
          <%= @order.payment_method_i18n%>
        </div>

        <div class="form-group">
          <%= f.label :status, "注文ステータス", class: "col-sm-4 col-form-label" %>
          <%= f.select :status, Order.statuses_i18n.invert.keys, class: "status_i18n" %>　<%= f.submit "更新" , class: "btn btn-success" %>
        </div>
      <% end %>

      <table class="table table-bordered">
        <thead>
          <tr class="table-secondary">
            <th class="">商品名</th>
            <th class="">単価(税込)</th>
            <th class="">数量</th>
            <th class="">小計</th>
            <th class="">製作ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @order_details.each do |order_detail
          <% @sum = 0 %>
            <%= form_with model: @order_detail, url: admin_order_detail_path(order_detail.id)  do |f| %>
              <tr>
                <td><%= order.item.name %></td>
                <td><%= order.item.with_tax_price.to_s(:delimited) %></td>
                <td><%= order.amount %></td>
                <td><%= order.subtotal.to_s(:delimited)%></td>
                <td><%= f.select :making_status, OrderDetail.making_statuses_i18n.invert.keys, class: "making_status_i18n" %>　<%= f.submit "更新" , class: "btn btn-success" %></td>
                <% @total+=order.subtotal %>
              </tr>
            <% end %>
          <% end %>
        </tbody>
      </table>
      <table align="right" height="49.5px">
          <tr>
            <th width="120px">合計金額</th>
            <td class="text-right"><%= @total.to_s(:delimited) %>円</td>
          </tr>
          <tr>
            <th>送料</th>
            <td class="text-right"><%= @postage %>円</td>
          </tr>
          <tr>
            <th>請求合計金額</th>
            <td class="text-right"><%= @total+@postage %>円</td>
          </tr>
      </table>
    </div>
  </div>
</div>