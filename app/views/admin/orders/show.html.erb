<div class='container'>
  <h3>注文履歴詳細</h3>

  <div class='row'>
    <div class="col">
      <table class="table table-borderless">
        <% @order_details.each do |order_detail| %>
        <%= form_with model: @order_details, url: admin_order_path do |f| %> <!-- pathが違う？ -->
          <tr>
            <th>購入者</th>
            <td><%= order_detail.order.name %></td>
          </tr>
          <tr>
             <th>注文日</th>
             <td><%= order_detail.order.created_at.strftime('%Y/%m/%d') %></td>
          </tr>
           <tr>
            <th>配送先</th>
            <td>〒<%= order_detail.order.postal_code %><br>
              <%= order_detail.order.address %><br>
              <%= order_detail.order.name %>
            </td>
          </tr>
          <tr>
            <th>支払方法</th>
            <td><%= order_detail.order.payment_method_i18n%></td>
          </tr>
            <th>注文ステータス</th>
            <td>
              <%= f.select :status, Order.statuses_i18n.invert %>
              <%= f.submit "更新" , class: "btn btn-success" %>
            </td>
          </tr>
        <% end %>
        <% end %>
      </table>

      <table class="table table-bordered">
        <thead>
          <tr>
            <th>商品名</th>
            <th>単価(税込)</th>
            <th>数量</th>
            <th>小計</th>
            <th>製作ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @total = 0 %>
          <% @order_details.each do |order_detail| %>
          <%= form_with model: @order_details, url: admin_order_path do |f| %>
          <% @total += order_detail.subtotal %>
          <tr>
            <td><%= order_detail.item.name %></td>
            <td><%= order_detail.item.with_tax_price.to_s(:delimited) %></td>
            <td><%= order_detail.amount %></td>
            <td><%= @total %></td>
            <td>
              <%= f.select :making_status, OrderDetail.making_statuses_i18n.invert %>
              <%= f.submit "更新" , class: "btn btn-success" %>
            </td>
          </tr>
          <% end %>

        </tbody>
      </table>

      <table align="right", width="350px">
        <tr>
          <th>商品合計</th>
          <td><%= order_detail.item.with_tax_price.to_s(:delimited) %>円</td>
        </tr>
        <tr>
          <th>送料</th>
          <td>800円</td>
        </tr>
        <tr>
          <th>請求金額合計</th>
          <td><%= @total + 800 %>円</td>
        </tr>
      </table>
      <% end %>
    </div>
  </div>
</div>