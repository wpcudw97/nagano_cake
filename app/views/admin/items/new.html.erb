<div class='container'>
  <h1>商品新規登録</h1>

  <div class='row'>
    <div class="col-sm-30 col-lg-5 px-sm-0 mx-auto">

      <%= form_with model: @item, url: root_path, method: :patch do |f| %>

        <div class="form-group row mb-3">
          <%= f.label :name, "商品画像", class: "col-sm-4 col-form-label" %>
          <%= f.file_field :profile_image,  accept: "image/*" %>
        </div>

        <div class="form-group row mb-3">
          <%= f.label :name, "商品名", class: "col-sm-4 col-form-label" %>
          <%= f.text_field :name, placeholder: "商品名", size: 35 %>
        </div>

        <div class="form-group row mb-3">
          <%= f.label :name, "商品説明", class: "col-sm-4 col-form-label" %>
          <%= f.text_area :introductiony, placeholder: "ここに説明文を記述します", rows: 8, cols: 34 %>
        </div>

        <div class="form-group row mb-3">
          <%= f.label :genre_id, "ジャンル", class: "col-sm-4 col-form-label" %>
          <%= f.select :genre_id, options_for_select([ ["ケーキ","1"] , ["プリン","2"] , ["焼き菓子","3"] , ["キャンディー","4"] ]), options = { include_blank: "--選択してください--"}, :style => "width:310px" %>
        </div>

        <div class="form-group row mb-3">
          <%= f.label :name, "税抜価格", class: "col-sm-4 col-form-label" %>
          <%= f.text_field :price, placeholder: 1000, size: 35 %>円
        </div>

        <div class="form-group row mb-3">
          <%= f.label :is_active, "販売ステータス", class: "col-sm-4 col-form-label" %>
          <%= f.radio_button :is_active, "0", checked: true %>
          <%= f.label :is_active, "販売中", value: 0, class: "col-sm-3 col-form-label" %>
          <%= f.radio_button :is_active, "1" %>
          <%= f.label :is_active, "販売停止中", value: 1, class: "col-sm-3 col-form-label" %>
        </div>

        <div class="form-group text-center">
          <%= f.submit '新規登録', class:"btn btn-success" %>
        </div>

      <% end %>

    </div>
  </div>
</div>