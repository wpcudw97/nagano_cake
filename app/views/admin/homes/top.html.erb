<div class='container'>
  <h3>注文履歴一覧</h3>
  <div class="col">
    <div class='row'>
      <table class="table table-bordered">
        <thead>
          <tr class="table-secondary">
            <th>購入日時</th>
            <th>購入者</th>
            <th>注文個数</th>
            <th>注文ステータス</th>
          </tr>
        </thead>
        <tbody>
        <% @orders.each do |order| %>
          <tr>
            <td>
              <%= link_to admin_order_path(order.id), class: "text-dark", style: "padding: 1px; border-bottom: solid 1px black;" do %>
                <%= order.created_at.strftime('%Y/%m/%d %T') %>
              <% end %>
            </td>
            <td><%= order.name %></td>
            <td><%= order.order_details.sum(:amount) %></td>
            <td><%= order.status_i18n %></td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
   <div class="d-flex justify-content-center container"><%= paginate @orders %></div>
</div>