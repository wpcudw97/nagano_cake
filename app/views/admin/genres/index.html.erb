<div class='container'>
  <h3>ジャンル一覧・追加</h3>
  <div class='row'>
    <div class="col-sm-30 col-lg-5 px-sm-0 mx-auto">
      <%= form_with model: @genre, url: admin_genres_path do |f| %>
        <div class="form-group row mb-3">
          <%= f.label :name, "ジャンル名", class: "col-sm-4 col-form-label" %>
          <%= f.text_field :name, placeholder: "ジャンル名" %>
          <%= f.submit '新規登録', class:"btn btn-success" %>
        </div>
      <% end %>
    </div>

    <table class="table table-hover table-inverse">
      <thead>
        <tr class="table-active">
          <th>ジャンル</th>
          <th></th>
        </tr>
        </thead>
        <tbody>
          <% @genres.each do |genre| %>
            <tr>
              <td><%= genre.name %></td>
              <td><%= link_to '編集する', edit_admin_genre_path(genre.id), class: "btn btn-success" %></td>
            </tr>
          <% end %>
        </tbody>
    </table>
  </div>
</div>