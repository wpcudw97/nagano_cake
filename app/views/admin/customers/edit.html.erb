<div class='container'>
  <h3><%= @customer.last_name + @customer.first_name %>さんの会員情報編集</h3>

  <div class='row'>
    <div class="col">
      <%= form_with model: @customer, url: admin_customer_path do |f| %>
        <div class="form-group">
          <%= f.label :id, "会員ID", class: "col-sm-4 col-form-label" %>
          <%= @customer.id %>
        </div>

        <div class="form-group">
          <%= f.label "氏名", class: "col-sm-4 col-form-label" %>
          <%= f.text_field :last_name %>　　　<%= f.text_field :first_name %>
        </div>

        <div class="form-group">
          <%= f.label "フリガナ", class: "col-sm-4 col-form-label" %>
          <%= f.text_field :last_name_kana %>　　　<%= f.text_field :first_name_kana %>
        </div>

        <div class="form-group">
          <%= f.label :postal_code, "郵便番号", class: "col-sm-4 col-form-label" %>
          <%= f.text_field :postal_code %>
        </div>

        <div class="form-group">
          <%= f.label "住所", class: "col-sm-4 col-form-label" %>
          <%= f.text_field :address, size: 60 %>
        </div>

        <div class="form-group">
          <%= f.label "電話番号", class: "col-sm-4 col-form-label" %>
          <%= f.text_field :telephone_number %>
        </div>

        <div class="form-group">
          <%= f.label :email, "メールアドレス", class: "col-sm-4 col-form-label" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </div>

        <div class="form-group">
          <%= f.label :is_deleted, "会員ステータス", class: "col-sm-4 col-form-label" %>
          <%= f.radio_button :is_deleted, :"有効", checked: true %>
          <%= f.label :is_deleted, "有効", value: false, class: "col-sm-3 col-form-label" %>
          <%= f.radio_button :is_deleted, :"退会" %>
          <%= f.label :is_deleted, "退会", value: true, class: "col-sm-3 col-form-label" %>
        </div>

        <%= f.submit '変更を保存', class:"btn btn-success" %>

      <% end %>
    </div>
  </div>
</div>