<div class='container'>
  <h3>◯◯mさんの会員詳細</h3>
  <div class='row'>
    <div class="col-sm-30 col-lg-5 px-sm-0 mx-auto">
      <table class="table table-borderless">
        <thead>
          <tr>
            <th>会員ID</th>
            <td><%= @customer.id %></td>
          </tr>

          <tr>
            <th>氏名</th>
            <td><%= @customer.last_name %><%= @customer.first_name %></td>
          </tr>

          <tr>
            <th>フリガナ</th>
            <td><%= @customer.last_name_kana %><%= @customer.first_name_kana %></td>
          </tr>

          <tr>
            <th>郵便番号</th>
            <td><%= @customer.postal_code %></td>
          </tr>

          <tr>
            <th>メールアドレス</th>
            <td><% @customer.email %></td>
          </tr>

          <tr>
            <th>会員ステータス</th>
            <td><%= @customer.is_deleted %></td>
          </tr>
        </thead>
      </table>

      <div class="">
        <%= link_to "編集する",  edit_admin_customer_path(@customer.id), class: "btn btn-success" %>
      </div>

       <div class="">
        <%= link_to "注文履歴一覧を見る",  edit_admin_customer_path(@customer.id), class: "btn btn-primary" %> <!-- pathの変更必要-->
      </div>

    </div>
  </div>
</div>
