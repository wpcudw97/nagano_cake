<div class='container'>
  <h3><%= @customer.last_name %>さんの会員詳細</h3>

  <div class='row'>
    <div class="col">
      <%= form_with model: @customer, url: admin_customer_path do |f| %>
        <div class="form-group">
          <%= f.label :id, "会員ID", class: "col-sm-4 col-form-label" %>
          <%= @customer.id %>
        </div>

        <div class="form-group">
          <%= f.label :name, "氏名", class: "col-sm-4 col-form-label" %>
          <%= @customer.last_name %>　<%= @customer.first_name %>
        </div>

        <div class="form-group">
          <%= f.label :last_name_kana, "フリガナ", class: "col-sm-4 col-form-label" %>
          <%= @customer.last_name_kana %>　<%= @customer.first_name_kana %>
        </div>

        <div class="form-group">
          <%= f.label :postal_code, "郵便番号", class: "col-sm-4 col-form-label" %>
          <%= @customer.postal_code %>
        </div>

        <div class="form-group">
          <%= f.label "住所", class: "col-sm-4 col-form-label" %>
          <%= @customer.address %>
        </div>

        <div class="form-group">
          <%= f.label :email, "メールアドレス", class: "col-sm-4 col-form-label" %>
          <%= @customer.email %>
        </div>

        <div class="form-group">
          <%= f.label :is_deleted, "会員ステータス", class: "col-sm-4 col-form-label" %>
          <%= @customer.is_deleted %>
        </div>

        <div class="d-flex justify-content-around">
          <%= link_to "編集する",  edit_admin_customer_path(@customer.id), class: "btn btn-success" %>
          <%= link_to "注文履歴一覧を見る",  edit_admin_customer_path(@customer.id), class: "btn btn-primary" %> <!-- pathの変更必要-->
        </div>


      <% end %>
    </div>
  </div>
</div>