<!DOCTYPE html>
<html>
  <head>
    <title>NaganoCake</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <header>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
      <div class="container">
        <%= link_to "Nakano_Cake", root_path, class:"navbar-brand" %>
        <div class="collapse navbar-collapse">
          <ul class="navbar-nav ml-auto">
            <li>
              <%= link_to "About", root_path, class:"nav-link text-light" %>
            </li>
            <li>
              <%= link_to "商品一覧", root_path, class:"nav-link text-light" %>
            </li>
            <li>
              <%= link_to "新規登録", new_admin_session_path, class:"nav-link text-light" %>
            </li>
            <li>
              <%= link_to "ログイン", new_admin_registration_path, class:"nav-link text-light" %>
            </li>
          </ul>
        </div>
      </div>
    </nav>
  </header>
  <%= yield %>
  </body>
</html>
